{% comment %}This snippet is generated by EasyVideo app. DO NOT EDIT it directly, your changes may be overwritten!{% endcomment %}
{% if template contains "product" or template contains "index" %}
  {% assign mainImage = variant.featured_image | default: product.featured_image %}

  {% assign easyvideo_media_data = '' %}
  {% for m in product.media %}
    {% assign easyvideo_media_alt = '' %}
    {% assign easyvideo_media_sources = '""' %}
    {% case m.media_type %}
      {% when 'image' %}
        {% assign easyvideo_media_alt = m.alt %}
      {% when 'video' %}
        {% capture easyvideo_media_alt %}easyvideo-media-item-{{ m.id }}{% endcapture %}
        {% capture easyvideo_media_sources %}[{% for s in m.sources %}{"src":"{{s.url}}","type":"{{s.mime_type}}"}{% unless forloop.last %},{% endunless %}{% endfor %}]{% endcapture %}
      {% when 'external_video' %}
        {% capture easyvideo_media_alt %}{% if m.host == 'youtube' %}https://youtube.com/watch?v={{ m.external_id }}{% endif %}{% endcapture %}
      {% when 'model' %}
    {% endcase %}

    {% capture easyvideo_media_data %}{{ easyvideo_media_data }}{% unless forloop.first %},{% endunless %}"{{ m | img_url: 'original' }}": {"alt": "{{ easyvideo_media_alt | replace: '"', '\"' | replace: "'", '' }}", "sources": {{ easyvideo_media_sources }}, "media_type": "{{ m.media_type }}"}{% endcapture %}
  {% endfor %}
  {% capture easyvideo_media_data %}{ {{ easyvideo_media_data }} }{% endcapture %}

  <meta id="easyvideo_featured_product_image" content="{{ product.featured_image | img_url: '1024x1024' | split: '_1024x1024' | first }}" />
  <meta id="easyvideo_featured_main_image" content="{{ mainImage | img_url: '1024x1024' | split: '_1024x1024' | first }}_" />
  <meta id="easyvideo_enabled" content="1" />
  <meta id="easyvideo_images" content="{% for image in product.images %}{{ image.src | img_url: 'original', scale: 2 }}{% unless forloop.last %}:@:{% endunless %}{% endfor %}" />
  <meta id="easyvideo_media" content='{{ easyvideo_media_data }}' />
  <meta id="easyvideo_selector" content="" />
  <meta id="easyvideo_youtube_parameters" content="?rel=0&modestbranding=1" />
  <meta id="easyvideo_vimeo_parameters" content="?title=0&byline=0" />
  <meta id="easyvideo_alt" content="{% for image in product.images %}{{ image.alt | escape  }}{% unless forloop.last %}:@:{% endunless %}{% endfor %}" />

  <meta id="easyvideo_popup" content="1" />    
  <script type="text/javascript">
    var evImgs = document.querySelectorAll("img[alt*=\'//vimeo.com/\'],img[alt*=\'youtube.com/watch\'],img[alt*=\'youtu.be/\']");
    for( var i = 0; i < evImgs.length; i++ ) evImgs[i].style.opacity = 0;
  </script>

