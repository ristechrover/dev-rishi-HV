      border-radius: 10px;
      pointer-events:none;
      z-index: 99999;
      text-align: center;
    }
    .easyvideo-overlay-play-icon:hover:before {
      opacity: 1;
    }
    .easyvideo-overlay-play-icon img {
      pointer-events: auto;
    }
    .product-single__image-wrapper iframe, .product-single .product-single__featured-image-wrapper .product-single__photos iframe,
