<section class="ambassador_brand">
  <div class="wrapper">
    <div class="row">
      <div class="col-2-3">
        <div class="brand_header">
          {% comment %}
          {% if section.settings.header_title %}
          <h2>{{section.settings.header_title}}</h2>
          {% endif %}
          {% endcomment %}
          <div class="title"><img src="https://cdn.shopify.com/s/files/1/0017/3113/3555/files/Benefits_Rewards.png?v=1630995650"></div>
          <p>{{section.settings.sub_title}}</p>
          <img src="https://cdn.shopify.com/s/files/1/0017/3113/3555/files/arrow-left.png?v=1630586665" class="arrow right">
        </div>
      </div>
    </div>
    <div class="brand">
      <img src="https://cdn.shopify.com/s/files/1/0017/3113/3555/files/Stamp.png?v=1630588531" class="stamp" alt="stamp">
      <h3 class="text-center entitle">
        {{section.settings.paragraph}}
        <img src="https://cdn.shopify.com/s/files/1/0017/3113/3555/files/wave.png?v=1630591525">
      </h3>
      <div class="brand_content">
        <div class="content">
          <img src="{{ section.settings.brand_img_1 | img_url: 'master' }}" />
          {% if section.settings.brand_title_1 %}
          	<h3>{{section.settings.brand_title_1}}</h3>
          {% endif %}
        </div>
        <div class="content">
          <img src="{{ section.settings.brand_img_2 | img_url: 'master' }}" />
          {% if section.settings.brand_title_2 %}
          <h3>{{section.settings.brand_title_2}}</h3>
          {% endif %}
        </div>
        <div class="content">
          <img src="{{ section.settings.brand_img_3 | img_url: 'master' }}" />
          {% if section.settings.brand_title_3 %}
          <h3>{{section.settings.brand_title_3}}</h3>
         {% endif %}
        </div>
        <div class="content">
          <img src="{{ section.settings.brand_img_4 | img_url: 'master' }}" />
          {% if section.settings.brand_title_4 %}
          	<h3>{{section.settings.brand_title_4}}</h3>
          {% endif %}
        </div>
        <div class="content">
          <img src="{{ section.settings.brand_img_5 | img_url: 'master' }}" />
          {% if section.settings.brand_title_5 %}
          	<h3>{{section.settings.brand_title_5}}</h3>
          {% endif %}
        </div>
      </div>
    </div>
  </div>

  <div class="wrapper">
    <div class="row justify-content-center">
      <div class="col-1-2 text-center">
        {% if section.settings.button_text %}
        	<div class="btn-div"><a href="{{section.settings.button_link}}" class="hup-btn">{{section.settings.button_text}}</a></div>
       {% endif %}
        {% if section.settings.Description %}
        <p class="style-italic">{{section.settings.Description}}</p>
        {% endif %}
      </div>
    </div>
  </div> 
</section>

