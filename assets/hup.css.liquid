.ambassador_brand .brand{
  position:relative;
  border:1px solid #bdbbbc;
  margin:50px 0 60px;
}
.ambassador_brand .brand .stamp{
  position:absolute;
  right:0;
  top:0;
  -webkit-transform:translate(25%,-75%);
