.image-right-bottom{
  padding-top:110px;
  /*   margin-bottom:-200px; */
  margin-bottom: -320px; 
  margin-left:-20px;
  /*   width:26%; */
  width:calc(27% + 20px);
}
.brand-top-section .logo img{
  max-width:589px;
  margin: 0 auto;
  width:100%;
}
.social_link{
  font-family: 'Montserrat', sans-serif;
  font-size:18px;
  font-weight:500;
  line-height:40px;
  color:#3b3a39;
  text-transform:uppercase;
}
.social_link strong{display:inline-block; padding:0 5px;}
.social_link img{width:25px;}
.btn-div{
  max-width:390px;
  height:100px;
  margin:0 auto;
  text-align:center;
  position: relative;
  z-index: 1;
  margin-bottom:40px;
}
.btn-div:after{
  content: '';
  position: absolute;
  display:inline-block;
  width: calc(100% + 20px);
  height: calc(100% + 5px);
  top: 15px;
  left: -10px;
  background-image: url("https://cdn.shopify.com/s/files/1/0017/3113/3555/files/btn-after.png?v=1630574302");
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
  z-index: -1;
}
a.hup-btn{
  display:block;
  line-height:100px;
  color:#fff;
  font-size:32px;
  text-transform:uppercase;
  background-color: transparent;
  position: relative;
  border: 1px solid transparent;
  transition: color .45s cubic-bezier(.785, .135, .15, .86),border .45s cubic-bezier(.785, .135, .15, .86);
  z-index: 1;
  -webkit-tap-highlight-color: initial;
}
a.hup-btn::before{
  position: absolute;
  content: "";
  display: block;
  background-color:#e15524;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  transform: scale(1,1);
  transform-origin: left center;
  z-index: -1;
  transition: transform .45s cubic-bezier(.785, .135, .15, .86);
}
a.hup-btn:hover{
  color:#3b3a39;
  border-color: #e15524;
}
a.hup-btn:hover::before{
  transform-origin: right center;
  transform: scale(0,1);
}

